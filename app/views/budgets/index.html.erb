<div class="container">
  <div class="row">
    <div><br>
    <h3>予算</h3>
      <% flash[:notice] %>
      <div>
        <%= form_with model: @add, url: month_budgets_path, method: :post do |f| %>
          <div>
            <%= f.label :amount, "予算登録" %>
            <%= f.text_field :amount, placeholder: "金額を入力してください", class: "form-control" %>
            <%= f.submit '登録', class:"btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div><br>
    <div>
        <table id="budget" class="table">
          <!--ここから非同期-->
            <%= render 'budgets/index', budgets: @budgets %>
          <!--ここまで-->
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to "キャンセル", user_my_page_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>