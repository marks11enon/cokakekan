<div class="container">
  <div class="row">
    <div class="col">
      <div class="white-box">
        <table class="table">
          <tr>
            <td><%= @this %>月の家計簿</td>
          </tr>
        </table>
        <table>
          <tr>
            <td>口座残高</td>
            <td><%= @month.balance_last.floor.to_s(:delimited, delimiter: ',') %>円</td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col">
      <div class="white-box">
        <table class="table">
          <tr>
            <td>今月の収支</td>
          </tr>
        </table>
        <table>
          <tr>
            <td>収入</td>
            <td><%= "+#{@income_total.to_s(:delimited)}円" %></td>
          </tr>
          <tr>
            <td>支出</td>
            <td><%= "-#{@spending_total.to_s(:delimited)}円" %></td>
          </tr>
          <tr>
            <td>収支</td>
            <td><%= "#{@balance_of_payments.to_s(:delimited)}円" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div><br>
  <div>
    <%= pie_chart @output_result, donut: true, library: {title: {text: "今月の支出 #{@spending_sum}"}} %>
  </div><br>
  <div>
    <!-- 検索機能実装  -->
    <%= render "details/header" %>
  </div>
  <% if user_signed_in? %>
    <%= render 'details/footer' %>
  <% end %>
</div>
