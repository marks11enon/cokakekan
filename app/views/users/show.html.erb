<div class="container">
  <div class="row">
    <div>
      <h3><%= @user.name %></h3>
      <table class="table">
        <tbody>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
    </div>
  </div>
</div>